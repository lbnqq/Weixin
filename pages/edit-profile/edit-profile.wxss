/* pages/edit-profile/edit-profile.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 32rpx 24rpx;
}

/* 通用标题样式 */
.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 32rpx;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 头像编辑区域 */
.avatar-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.avatar-container {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 24rpx;
  border-radius: 50%;
  overflow: hidden;
  cursor: pointer;
  transition: all 0.3s ease;
}

.avatar-container:hover {
  transform: scale(1.05);
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.2);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #667eea;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 50%;
}

.avatar-container:hover .avatar-overlay {
  opacity: 1;
}

.avatar-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.avatar-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

.avatar-tip {
  font-size: 24rpx;
  color: #6B7280;
  text-align: center;
  display: block;
}

/* 昵称编辑区域 */
.nickname-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.nickname-container {
  position: relative;
  margin-bottom: 16rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #F8F9FA;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #1F2937;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.nickname-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.nickname-input::placeholder {
  color: #9CA3AF;
}

.nickname-count {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #6B7280;
  background: white;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.nickname-tip {
  font-size: 24rpx;
  color: #6B7280;
  display: block;
}

/* 原始信息展示 */
.original-info-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10px);
  border: 2rpx dashed rgba(102, 126, 234, 0.3);
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #6B7280;
  margin-right: 16rpx;
  min-width: 120rpx;
}

.info-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #E5E7EB;
}

.info-value {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

/* 操作按钮区域 */
.action-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.save-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.save-btn:not(.disabled):active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.save-btn.disabled {
  background: #E5E7EB;
  color: #9CA3AF;
  box-shadow: none;
  cursor: not-allowed;
}

.reset-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #6B7280;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.reset-btn:active {
  background: #F3F4F5;
  border-color: #D1D5DB;
}

.cancel-btn {
  background: transparent;
  color: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.cancel-btn:active {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.5);
}

/* 成功提示 */
.success-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 168, 112, 0.95);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 32rpx rgba(0, 168, 112, 0.4);
  z-index: 1000;
  animation: successToastFadeIn 0.3s ease;
}

.success-icon {
  font-size: 32rpx;
}

.success-text {
  font-size: 28rpx;
  font-weight: 500;
}

@keyframes successToastFadeIn {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

/* 图片裁剪弹窗 */
.cropper-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  backdrop-filter: blur(4rpx);
}

.cropper-container {
  background: white;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.3);
}

.cropper-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #F3F4F5;
}

.cropper-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
}

.cropper-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #F3F4F5;
  border: none;
  font-size: 32rpx;
  color: #6B7280;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.cropper-close:active {
  background: #E5E7EB;
}

.cropper-content {
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.cropper-image {
  max-width: 100%;
  max-height: 400rpx;
  border-radius: 12rpx;
}

.cropper-actions {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 2rpx solid #F3F4F5;
}

.crop-cancel-btn {
  flex: 1;
  height: 80rpx;
  background: #F3F4F5;
  color: #6B7280;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.crop-cancel-btn:active {
  background: #E5E7EB;
}

.crop-confirm-btn {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.crop-confirm-btn:active {
  transform: translateY(2rpx);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 24rpx 16rpx;
  }

  .section-title {
    font-size: 32rpx;
  }

  .avatar-container {
    width: 160rpx;
    height: 160rpx;
  }

  .nickname-input {
    height: 80rpx;
    font-size: 28rpx;
  }

  .save-btn,
  .reset-btn,
  .cancel-btn {
    height: 80rpx;
    font-size: 28rpx;
  }
}