/* pages/profile/profile.wxss */

.container {
  min-height: 100vh;
  background: var(--td-bg-color-page, #F3F4F5);
  padding: 0;
}

/* 头部区域 */
.header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 32rpx 40rpx;
}

.user-card, .login-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 32rpx;
  backdrop-filter: blur(10px);
  position: relative;
}

.user-card {
  cursor: pointer;
  transition: all 0.3s ease;
}

.user-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.8);
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.user-status {
  font-size: 24rpx;
  color: #6B7280;
}

.edit-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 16rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
  margin-right: 16rpx;
  transition: all 0.3s ease;
}

.edit-icon {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.edit-text {
  font-size: 20rpx;
  color: #667eea;
  font-weight: 500;
}

.logout-section {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.logout-btn {
  background: rgba(255, 255, 255, 0.9);
  color: var(--td-error-color, #E34D59);
  border: 2rpx solid var(--td-error-color, #E34D59);
  border-radius: 20rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  font-weight: 500;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.logout-btn:active {
  transform: scale(0.95);
  background: rgba(227, 77, 89, 0.1);
}

.login-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #E5E7EB;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
}

.login-info {
  flex: 1;
}

.login-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.login-subtitle {
  font-size: 24rpx;
  color: #6B7280;
}

/* 登录卡片样式 */
.login-card {
  flex-direction: column;
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.login-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  width: 100%;
}

.login-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  overflow: hidden;
}

.avatar-icon {
  font-size: 40rpx;
  color: #9ca3af;
}

.login-title {
  flex: 1;
}

.title-main {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.title-sub {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.4;
}

.login-features {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  width: 100%;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.feature-icon {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #374151;
  text-align: center;
}

.wechat-login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07c160 0%, #00ae52 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  border: none;
  position: relative;
  overflow: hidden;
}

.wechat-login-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.wechat-login-btn:active::after {
  left: 100%;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.wechat-icon-text {
  font-size: 32rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.login-agreement {
  text-align: center;
  font-size: 24rpx;
  color: #9ca3af;
  line-height: 1.6;
}

.agreement-prefix {
  color: #9ca3af;
}

.agreement-link {
  color: #0052d9;
  text-decoration: underline;
  margin: 0 4rpx;
}

.agreement-separator {
  color: #9ca3af;
  margin: 0 4rpx;
}

/* 登录弹窗样式 */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4rpx);
}

.modal-content {
  position: relative;
  width: 85%;
  max-width: 640rpx;
  background: white;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 24rpx 80rpx rgba(0, 0, 0, 0.12);
  animation: modalShow 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes modalShow {
  from {
    opacity: 0;
    transform: scale(0.8) translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.modal-header {
  position: relative;
  padding: 40rpx 32rpx 24rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-logo {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 16rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-text {
  font-size: 48rpx;
}

.modal-close {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 50%;
  transition: all 0.2s;
}

.modal-close:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.close-icon {
  font-size: 40rpx;
  color: #6b7280;
  font-weight: 300;
}

.modal-body {
  padding: 32rpx;
}

.modal-title-section {
  text-align: center;
  margin-bottom: 32rpx;
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.modal-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.5;
}

.permission-list {
  margin-bottom: 32rpx;
}

.permission-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f9fa;
}

.permission-item:last-child {
  border-bottom: none;
}

.permission-icon {
  width: 56rpx;
  height: 56rpx;
  background: #f0f9ff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.permission-info {
  flex: 1;
}

.permission-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.permission-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.agreement-section {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.agreement-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.agreement-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 8rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  transition: all 0.2s;
}

.agreement-checkbox.checked {
  background: #0052d9;
  border-color: #0052d9;
}

.check-mark {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}

.agreement-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
}

.agreement-links {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.link-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background: white;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.link-item:active {
  background: #f8f9fa;
  transform: scale(0.98);
}

.link-text {
  font-size: 26rpx;
  color: #0052d9;
}

.link-arrow {
  font-size: 28rpx;
  color: #0052d9;
  font-weight: 300;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: none;
  background: transparent;
  position: relative;
  transition: all 0.2s;
}

.cancel-btn {
  color: #6b7280;
  border-right: 1rpx solid #f0f0f0;
}

.cancel-btn:active {
  background: #f8f9fa;
}

.confirm-btn {
  color: white;
  background: linear-gradient(135deg, #07c160 0%, #00ae52 100%);
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
}

.confirm-btn:active {
  transform: scale(0.98);
}

.confirm-btn.disabled {
  background: #f3f4f6;
  color: #d1d5db;
  box-shadow: none;
}

.wechat-icon-small {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.login-btn {
  background: var(--td-brand-color, #0052D9);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

/* 统计数据 */
.stats-section {
  margin: 32rpx 24rpx;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--td-brand-color, #0052D9);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6B7280;
}

/* 功能菜单 */
.menu-section, .settings-section {
  margin: 0 24rpx 24rpx;
  background: white;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 12rpx;
  margin: 4rpx 0;
  transition: background-color 0.2s ease;
}

.menu-item:active {
  background-color: #F9FAFB;
}

.menu-item.danger .menu-text {
  color: var(--td-error-color, #E34D59);
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
}

.menu-arrow {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 版本信息 */
.version-section {
  margin: 32rpx 24rpx;
  text-align: center;
  padding: 32rpx 0;
}

.version-text {
  display: block;
  font-size: 24rpx;
  color: #9CA3AF;
  margin-bottom: 8rpx;
}

.copyright-text {
  font-size: 22rpx;
  color: #D1D5DB;
}