/* pages/debug-database/debug-database.wxss */

.debug-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* 导航区域 */
.nav-section {
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

/* 导航区域 */
.nav-section {
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.status-section {
  margin-bottom: 30rpx;
}

.status-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.status-label {
  font-size: 28rpx;
  color: #666;
}

.status-value {
  font-size: 28rpx;
  font-weight: 500;
}

.status-success {
  color: #07c160;
}

.status-error {
  color: #e54d42;
}

.action-section {
  margin-bottom: 30rpx;
}

.button-group {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.button-group t-button {
  flex: 1;
  min-width: 200rpx;
}

.testing-status {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  gap: 16rpx;
}

.testing-text {
  font-size: 28rpx;
  color: #333;
}

.results-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-count, .error-count {
  font-size: 24rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.results-scroll {
  max-height: 400rpx;
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
}

.result-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.result-time {
  font-size: 24rpx;
  color: #999;
}

.result-message {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin: 12rpx 0;
  line-height: 1.5;
}

.result-data {
  margin-top: 12rpx;
  padding: 12rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  border-left: 4rpx solid #0052d9;
}

.data-label {
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}

.data-content {
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
}

.users-section {
  margin-bottom: 30rpx;
}

.users-scroll {
  max-height: 300rpx;
  background: white;
  border-radius: 12rpx;
}

.errors-section {
  margin-bottom: 30rpx;
}

.error-count {
  background: #fee;
  color: #e54d42;
}

.errors-scroll {
  max-height: 300rpx;
  background: white;
  border-radius: 12rpx;
}

.error-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #fee;
  background: #fff5f5;
}

.error-item:last-child {
  border-bottom: none;
}

.error-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.error-context {
  font-size: 28rpx;
  font-weight: bold;
  color: #e54d42;
}

.error-time {
  font-size: 24rpx;
  color: #999;
}

.error-message {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin: 8rpx 0;
  line-height: 1.4;
}

.copy-hint {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  font-style: italic;
}

.footer-section {
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}