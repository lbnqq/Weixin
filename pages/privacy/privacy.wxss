/* pages/privacy/privacy.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
}

.header {
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  height: 88rpx;
}

.nav-left {
  display: flex;
  align-items: center;
  color: #0052d9;
  font-size: 32rpx;
  min-width: 120rpx;
}

.back-icon {
  font-size: 40rpx;
  margin-right: 8rpx;
  font-weight: bold;
}

.back-text {
  font-size: 28rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  text-align: center;
  flex: 1;
}

.nav-right {
  min-width: 120rpx;
}

.content {
  padding: 40rpx 32rpx;
}

.privacy-section {
  text-align: center;
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.update-time {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 24rpx;
}

.intro-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
  max-width: 600rpx;
  margin: 0 auto;
}

.privacy-content {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.content-block {
  margin-bottom: 40rpx;
}

.content-block:last-child {
  margin-bottom: 0;
}

.block-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.block-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #374151;
}

.text-item {
  margin-bottom: 16rpx;
  font-weight: 500;
  color: #1f2937;
}

.text-indent {
  margin-left: 24rpx;
  margin-bottom: 12rpx;
  position: relative;
}

.text-indent:before {
  content: "";
  position: absolute;
  left: -16rpx;
  top: 14rpx;
  width: 6rpx;
  height: 6rpx;
  background-color: #9ca3af;
  border-radius: 50%;
}

.privacy-footer {
  text-align: center;
  margin-top: 48rpx;
  padding: 24rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: #9ca3af;
}