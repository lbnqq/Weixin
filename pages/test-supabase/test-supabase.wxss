/* pages/test-supabase/test-supabase.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.test-section {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 10rpx;
}

.user-info {
  margin-top: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.label {
  font-size: 26rpx;
  color: #666;
  width: 120rpx;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.test-form {
  margin-top: 20rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.test-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.btn {
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
  min-width: 180rpx;
}

.btn-primary {
  background-color: #007aff;
  color: white;
}

.btn-success {
  background-color: #4cd964;
  color: white;
}

.btn-warning {
  background-color: #ff9500;
  color: white;
}

.btn-danger {
  background-color: #ff3b30;
  color: white;
}

.btn-secondary {
  background-color: #8e8e93;
  color: white;
}

.full-width {
  width: 100%;
}

.log-container {
  height: 400rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.log-item {
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.log-time {
  font-size: 22rpx;
  color: #999;
  margin-right: 10rpx;
}

.log-message {
  font-size: 24rpx;
}

.log-message.info {
  color: #333;
}

.log-message.success {
  color: #4cd964;
}

.log-message.warning {
  color: #ff9500;
}

.log-message.error {
  color: #ff3b30;
}