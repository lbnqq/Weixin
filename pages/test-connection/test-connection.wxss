/* pages/test-connection/test-connection.wxss */

.test-connection-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx 0;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.connection-status {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
  margin-top: 10rpx;
}

.connection-status.success {
  background: #e8f5e8;
  color: #4CAF50;
}

.connection-status.error {
  background: #ffeaea;
  color: #f44336;
}

.connection-status.warning {
  background: #fff8e1;
  color: #ff9800;
}

.connection-status.testing {
  background: #e3f2fd;
  color: #2196f3;
}

.connection-status.unknown {
  background: #f5f5f5;
  color: #999;
}

/* 状态区域 */
.status-section {
  margin-bottom: 30rpx;
}

.status-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.status-label {
  font-size: 28rpx;
  color: #666;
}

.status-value {
  font-size: 28rpx;
  font-weight: 500;
}

/* 测试按钮区域 */
.test-section {
  margin-bottom: 30rpx;
}

.test-btn {
  width: 100%;
  padding: 30rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.test-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.test-btn.primary[disabled] {
  background: #ccc;
}

.test-btn.secondary {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.test-btn.secondary[disabled] {
  background: #f5f5f5;
  color: #ccc;
  border-color: #ddd;
}

/* 测试结果区域 */
.results-section {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-count {
  font-size: 28rpx;
  color: #666;
}

.results-scroll {
  max-height: 500rpx;
}

.result-list {
  padding: 20rpx;
}

.result-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #ddd;
}

.result-item.success {
  border-left-color: #4CAF50;
  background: #e8f5e8;
}

.result-item.error {
  border-left-color: #f44336;
  background: #ffeaea;
}

.result-item.info {
  border-left-color: #2196f3;
  background: #e3f2fd;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.result-step {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.result-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.result-status[style*="#4CAF50"] {
  background: #e8f5e8;
  color: #4CAF50;
}

.result-status[style*="#f44336"] {
  background: #ffeaea;
  color: #f44336;
}

.result-status[style*="#2196f3"] {
  background: #e3f2fd;
  color: #2196f3;
}

.result-message {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.result-timestamp {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.result-data {
  margin-top: 15rpx;
  padding: 15rpx;
  background: white;
  border-radius: 8rpx;
  border: 2rpx solid #eee;
}

.data-content {
  font-size: 24rpx;
  color: #555;
  font-family: monospace;
  white-space: pre-wrap;
}

/* 统计信息 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-card {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.stats-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 8rpx;
  background: #f8f9fa;
}

.stat-item.success {
  background: #e8f5e8;
}

.stat-item.error {
  background: #ffeaea;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 返回按钮 */
.footer-section {
  margin-bottom: 30rpx;
}

.footer-section .test-btn {
  margin-bottom: 0;
}