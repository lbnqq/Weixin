/* pages/result/result.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: white;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 32rpx;
  animation: bounce 2s infinite;
}

.loading-text {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.loading-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-20rpx);
  }
  60% {
    transform: translateY(-10rpx);
  }
}

/* 错误状态 */
.error-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: white;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 32rpx;
}

.error-text {
  font-size: 28rpx;
  margin-bottom: 32rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
}

.retry-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

/* 结果展示 */
.result-section {
  padding: 32rpx;
}

/* 头部信息 */
.header-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10px);
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 3rpx solid rgba(102, 126, 234, 0.3);
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--td-brand-color, #0052D9);
}

.anonymous-info {
  display: flex;
  align-items: center;
}

.anonymous-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #E5E7EB;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
}

/* 得分展示 */
.scores-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 24rpx;
  text-align: center;
}

.scores-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.score-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.score-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.score-icon {
  font-size: 24rpx;
}

.score-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  flex: 1;
}

.score-value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--td-brand-color, #0052D9);
  text-align: right;
}

.score-bar {
  height: 12rpx;
  background: #E5E7EB;
  border-radius: 6rpx;
  overflow: hidden;
}

.score-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--td-brand-color, #0052D9), #667eea);
  border-radius: 6rpx;
  transition: width 1s ease;
}

/* AI分析结果 */
.summary-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.summary-section .section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 32rpx;
  text-align: center;
  position: relative;
  padding-bottom: 16rpx;
}

.summary-section .section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #4A90E2, #5CB85C, #F5A623);
  border-radius: 2rpx;
}

.summary-content {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.content-item {
  background: linear-gradient(135deg, #F8FAFF 0%, #F0F4FF 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid var(--td-brand-color, #0052D9);
  box-shadow: 0 2rpx 12rpx rgba(0, 82, 217, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  opacity: 0;
  animation: slideInUp 0.6s ease forwards;
}

.content-item:nth-child(1) {
  animation-delay: 0.2s;
}

.content-item:nth-child(2) {
  animation-delay: 0.4s;
}

.content-item:nth-child(3) {
  animation-delay: 0.6s;
}

.content-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 82, 217, 0.2);
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.content-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.content-icon {
  font-size: 32rpx;
  color: white;
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  font-weight: 500;
}

.content-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--td-brand-color, #0052D9);
  letter-spacing: 1rpx;
}

.content-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.8;
  background: white;
  padding: 24rpx;
  border-radius: 16rpx;
  position: relative;
  top: -8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 格式化文本显示 */
.content-text {
  text-align: justify;
  text-justify: inter-ideograph;
  line-height: 1.8;
}

/* 段落间距 */
.content-text text {
  display: block;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #374151;
}

.content-text text:last-child {
  margin-bottom: 0;
}

/* 列表样式 */
.content-list {
  margin: 20rpx 0;
  padding-left: 40rpx;
}

.content-item-text {
  display: block;
  margin-bottom: 12rpx;
  position: relative;
  padding-left: 32rpx;
  text-align: justify;
  line-height: 1.8;
  font-size: 28rpx;
  color: #374151;
}

.content-item-text::before {
  content: '•';
  position: absolute;
  left: 8rpx;
  top: 0;
  color: var(--td-brand-color, #0052D9);
  font-weight: bold;
  font-size: 28rpx;
}

/* 标题样式 */
.content-subtitle {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin: 24rpx 0 16rpx 0;
  display: block;
  border-left: 6rpx solid var(--td-brand-color, #0052D9);
  padding-left: 16rpx;
  background: linear-gradient(90deg, rgba(0, 82, 217, 0.05), transparent);
  padding: 12rpx 16rpx;
  border-radius: 0 8rpx 8rpx 0;
}

/* 强调文本 */
.content-emphasis {
  font-weight: 600;
  color: var(--td-brand-color, #0052D9);
  background: rgba(0, 82, 217, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  margin: 0 4rpx;
  display: inline-block;
}

/* 子标题区域 */
.subtitle-section {
  margin: 24rpx 0 16rpx 0;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #E5E7EB;
}

/* 改善文本布局 */
.paragraph-container {
  margin: 12rpx 0;
  text-align: justify;
  line-height: 1.8;
}

.paragraph-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.8;
}

/* 项目符号容器 */
.bullet-item {
  margin: 12rpx 0;
  padding-left: 32rpx;
  position: relative;
  display: flex;
  align-items: flex-start;
}

.bullet-point {
  position: absolute;
  left: 0;
  top: 8rpx;
  color: var(--td-brand-color, #0052D9);
  font-weight: bold;
  font-size: 28rpx;
}

.bullet-text {
  flex: 1;
  line-height: 1.8;
  color: #374151;
  text-align: justify;
  font-size: 28rpx;
}

/* 强调文本容器 */
.emphasis-container {
  margin: 12rpx 0;
  line-height: 1.8;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.normal-text {
  color: #374151;
  font-size: 28rpx;
  text-align: justify;
}

/* 数字列表 */
.numbered-item {
  margin: 12rpx 0;
  padding-left: 40rpx;
  position: relative;
}

.number-marker {
  position: absolute;
  left: 0;
  color: var(--td-brand-color, #0052D9);
  font-weight: 600;
  font-size: 28rpx;
}

.numbered-text {
  flex: 1;
  line-height: 1.8;
  color: #374151;
  text-align: justify;
  font-size: 28rpx;
}

/* 性格分析强调文本 */
.personality-item .content-emphasis {
  color: #4A90E2;
  background: rgba(74, 144, 226, 0.1);
}

/* 职业建议强调文本 */
.career-item .content-emphasis {
  color: #5CB85C;
  background: rgba(92, 184, 92, 0.1);
}

/* 人际关系强调文本 */
.relationship-item .content-emphasis {
  color: #F5A623;
  background: rgba(245, 166, 35, 0.1);
}

/* 性格分析 - 蓝色主题 */
.personality-item {
  border-left-color: #4A90E2;
  background: linear-gradient(135deg, #F0F7FF 0%, #E6F3FF 100%);
}

.personality-icon {
  background: linear-gradient(135deg, #4A90E2 0%, #66B3FF 100%);
}

.personality-title {
  color: #4A90E2;
}

/* 职业建议 - 绿色主题 */
.career-item {
  border-left-color: #5CB85C;
  background: linear-gradient(135deg, #F0F9F0 0%, #E8F5E8 100%);
}

.career-icon {
  background: linear-gradient(135deg, #5CB85C 0%, #7BC87B 100%);
}

.career-title {
  color: #5CB85C;
}

/* 人际关系 - 橙色主题 */
.relationship-item {
  border-left-color: #F5A623;
  background: linear-gradient(135deg, #FFF9F0 0%, #FFF5E6 100%);
}

.relationship-icon {
  background: linear-gradient(135deg, #F5A623 0%, #F7C553 100%);
}

.relationship-title {
  color: #F5A623;
}

/* 操作按钮 */
.actions-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #374151;
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 底部提示 */
.footer-section {
  text-align: center;
  padding: 24rpx;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}

/* 分析标签页 - TDesign风格 */
.analysis-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10px);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  gap: 8rpx;
}

.tab-item.active {
  background: var(--td-bg-color-container, #FFFFFF);
  color: var(--td-brand-color, #0052D9);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

.tab-item:not(.active) {
  color: rgba(255, 255, 255, 0.8);
}

.tab-icon {
  font-size: 28rpx;
}

.tab-text {
  font-size: 24rpx;
  font-weight: 500;
}

.tab-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10px);
  animation: fadeIn 0.4s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* MBTI分析样式 */
.mbti-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #E8F4FD 0%, #F0F9FF 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #3B82F6;
}

.mbti-type-display {
  flex: 1;
}

.mbti-type-code {
  font-size: 48rpx;
  font-weight: 700;
  color: #3B82F6;
  letter-spacing: 4rpx;
  display: block;
  margin-bottom: 8rpx;
}

.mbti-type-name {
  font-size: 28rpx;
  color: #6B7280;
  display: block;
  margin-bottom: 16rpx;
}

.mbti-confidence {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.confidence-text {
  font-size: 24rpx;
  color: #6B7280;
}

.confidence-bar {
  width: 120rpx;
  height: 8rpx;
  background: #E5E7EB;
  border-radius: 4rpx;
  overflow: hidden;
}

.confidence-fill {
  height: 100%;
  background: linear-gradient(90deg, #3B82F6, #60A5FA);
  border-radius: 4rpx;
  transition: width 1s ease;
}

.mbti-actions {
  display: flex;
  gap: 12rpx;
}

.copy-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: var(--td-bg-color-container, #FFFFFF);
  border: 2rpx solid var(--td-border-color, #E5E7EB);
  border-radius: 8rpx;
  font-size: 24rpx;
  color: var(--td-text-color-primary, #1F2937);
  transition: all 0.3s ease;
}

.copy-btn:hover {
  border-color: var(--td-brand-color, #0052D9);
  color: var(--td-brand-color, #0052D9);
}

.copy-icon {
  font-size: 20rpx;
}

/* MBTI维度样式 */
.mbti-dimensions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.dimension-item {
  background: var(--td-bg-color-container, #FFFFFF);
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 4rpx solid #3B82F6;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.dimension-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.dimension-code {
  font-size: 32rpx;
  font-weight: 700;
  color: #3B82F6;
  background: rgba(59, 130, 246, 0.1);
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dimension-name {
  flex: 1;
  font-size: 28rpx;
  color: var(--td-text-color-primary, #1F2937);
  font-weight: 500;
}

.dimension-score {
  font-size: 24rpx;
  color: var(--td-text-color-secondary, #6B7280);
}

.dimension-desc {
  font-size: 24rpx;
  color: var(--td-text-color-secondary, #6B7280);
  line-height: 1.6;
}

/* MBTI特征样式 */
.mbti-traits {
  background: var(--td-bg-color-container, #FFFFFF);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 16rpx;
  border: 2rpx solid #E5E7EB;
}

.traits-header {
  margin-bottom: 16rpx;
}

.traits-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--td-text-color-primary, #1F2937);
}

.traits-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.trait-chip {
  background: linear-gradient(135deg, #EFF6FF 0%, #DBEAFE 100%);
  color: #1E40AF;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 1rpx solid #BFDBFE;
}

.mbti-careers {
  border-top: 2rpx solid #E5E7EB;
  padding-top: 20rpx;
}

.careers-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--td-text-color-primary, #1F2937);
  display: block;
  margin-bottom: 16rpx;
}

.careers-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.career-tag {
  background: linear-gradient(135deg, #F0FDF4 0%, #DCFCE7 100%);
  color: #166534;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  border: 1rpx solid #BBF7D0;
}

/* 贝尔宾团队角色样式 */
.belbin-header {
  background: linear-gradient(135deg, #FEF3C7 0%, #FEF9E7 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #F59E0B;
}

.belbin-primary-role {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.role-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #92400E;
}

.role-display {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.role-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #D97706;
}

.role-fit-score {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.fit-bar {
  width: 120rpx;
  height: 8rpx;
  background: #FEF3C7;
  border-radius: 4rpx;
  overflow: hidden;
}

.fit-fill {
  height: 100%;
  background: linear-gradient(90deg, #F59E0B, #FCD34D);
  border-radius: 4rpx;
  transition: width 1s ease;
}

.role-actions {
  display: flex;
  justify-content: flex-end;
}

/* 角色详情样式 */
.role-details {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 16rpx;
}

.role-section {
  background: var(--td-bg-color-container, #FFFFFF);
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 4rpx solid #F59E0B;
}

.role-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #92400E;
  display: block;
  margin-bottom: 16rpx;
}

.role-traits,
.role-contributions,
.role-development {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.role-trait-item,
.role-contribution-item,
.role-development-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 8rpx 0;
}

.trait-bullet {
  color: #F59E0B;
  font-size: 24rpx;
  font-weight: 700;
  margin-top: 4rpx;
}

.trait-text,
.contribution-text,
.development-text {
  flex: 1;
  font-size: 24rpx;
  color: var(--td-text-color-primary, #1F2937);
  line-height: 1.6;
}

.contribution-icon {
  color: var(--td-success-color, #00A870);
  font-size: 24rpx;
  font-weight: 700;
  margin-top: 4rpx;
}

.development-icon {
  font-size: 24rpx;
  margin-top: 4rpx;
}

/* 辅助角色样式 */
.secondary-roles {
  margin-top: 24rpx;
  padding: 24rpx;
  background: var(--td-bg-color-container, #FFFFFF);
  border-radius: 12rpx;
  border: 2rpx dashed var(--td-border-color, #E5E7EB);
}

.secondary-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--td-text-color-primary, #1F2937);
  display: block;
  margin-bottom: 16rpx;
}

.secondary-roles-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.secondary-role-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: var(--td-bg-color-page, #F3F4F5);
  border-radius: 8rpx;
}

.secondary-role-name {
  font-size: 24rpx;
  color: var(--td-text-color-primary, #1F2937);
  font-weight: 500;
}

.secondary-role-fit {
  font-size: 22rpx;
  color: var(--td-text-color-secondary, #6B7280);
}

/* 职业发展建议样式 */
.career-development-item,
.personal-growth-item {
  border-left-color: var(--td-success-color, #00A870);
}

.career-dev-icon {
  background: linear-gradient(135deg, #00A870 0%, #00C896 100%);
}

.career-dev-title {
  color: var(--td-success-color, #00A870);
}

.growth-icon {
  background: linear-gradient(135deg, #F59E0B 0%, #FCD34D 100%);
}

.growth-title {
  color: #D97706;
}

/* 综合建议样式 */
.comprehensive-advice {
  background: linear-gradient(135deg, #EEF2FF 0%, #F3F4FF 100%);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  border: 2rpx solid #8B5CF6;
}

.advice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #7C3AED;
  display: block;
  margin-bottom: 16rpx;
}

.advice-content {
  background: var(--td-bg-color-container, #FFFFFF);
  border-radius: 8rpx;
  padding: 20rpx;
}

.advice-text {
  font-size: 26rpx;
  color: var(--td-text-color-primary, #1F2937);
  line-height: 1.8;
}

/* TDesign按钮样式 */
.copy-btn:active {
  transform: scale(0.95);
  transition: transform 0.1s ease;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .analysis-tabs {
    padding: 6rpx;
  }

  .tab-item {
    padding: 16rpx 12rpx;
  }

  .tab-text {
    font-size: 22rpx;
  }

  .mbti-type-code {
    font-size: 40rpx;
  }

  .dimension-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }

  .traits-grid,
  .careers-list {
    gap: 8rpx;
  }
}