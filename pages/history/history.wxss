/* pages/history/history.wxss */

.container {
  min-height: 100vh;
  background: var(--td-bg-color-page, #F3F4F5);
  padding: 0;
}

/* 头部 */
.header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 32rpx 40rpx;
  color: white;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.page-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 加载状态 */
.loading-section {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40vh;
}

.loading-text {
  font-size: 28rpx;
  color: #6B7280;
}

/* 空状态 */
.empty-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #6B7280;
  text-align: center;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.start-test-btn {
  background: var(--td-brand-color, #0052D9);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 20rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 历史记录部分 */
.history-section {
  padding: 24rpx;
}

.section-actions {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 24rpx;
}

.clear-btn {
  background: transparent;
  color: var(--td-error-color, #E34D59);
  border: 2rpx solid var(--td-error-color, #E34D59);
  border-radius: 16rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: stretch;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F3F4F5;
}

.item-date {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

.item-type {
  font-size: 24rpx;
  color: var(--td-brand-color, #0052D9);
  background: #EFF6FF;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
}

/* 分数展示 */
.item-scores {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.score-bar-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.score-label {
  font-size: 24rpx;
  color: #6B7280;
  width: 100rpx;
}

.mini-score-bar {
  flex: 1;
  height: 8rpx;
  background: #E5E7EB;
  border-radius: 4rpx;
  overflow: hidden;
}

.mini-score-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--td-brand-color, #0052D9), #667eea);
  border-radius: 4rpx;
  transition: width 0.8s ease;
}

.score-value {
  font-size: 24rpx;
  color: #374151;
  font-weight: 500;
  width: 60rpx;
  text-align: right;
}

/* 摘要 */
.item-summary {
  background: #F9FAFB;
  padding: 16rpx;
  border-radius: 8rpx;
}

.summary-text {
  font-size: 24rpx;
  color: #6B7280;
}

/* 操作按钮 */
.item-actions {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}

.delete-btn {
  background: transparent;
  border: none;
  padding: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  font-size: 32rpx;
  opacity: 0.6;
}

.delete-btn:active .delete-icon {
  opacity: 1;
}

/* 底部操作 */
.bottom-actions {
  margin-top: 32rpx;
  padding: 0 24rpx;
}

.action-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: var(--td-brand-color, #0052D9);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(0, 82, 217, 0.3);
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 28rpx;
}