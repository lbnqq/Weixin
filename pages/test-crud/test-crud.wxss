/* 数据库CRUD测试页面样式 */
.test-crud-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 状态区域 */
.status-section {
  margin-bottom: 30rpx;
}

.status-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.status-label {
  font-size: 28rpx;
  color: #666;
}

.status-value {
  font-size: 28rpx;
  font-weight: 500;
}

.status-ready { color: #4CAF50; }
.status-testing { color: #FF9800; }
.status-complete { color: #2196F3; }

/* 控制按钮区域 */
.control-section {
  margin-bottom: 30rpx;
}

.test-btn {
  width: 100%;
  padding: 30rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.test-btn.primary {
  background-color: #2196F3;
  color: white;
}

.test-btn.primary[disabled] {
  background-color: #ccc;
}

.test-btn.secondary {
  background-color: #fff;
  color: #666;
  border: 2rpx solid #ddd;
}

.test-btn.secondary[disabled] {
  background-color: #f5f5f5;
  color: #ccc;
}

.btn-group {
  display: flex;
  gap: 20rpx;
}

.btn-group .test-btn {
  flex: 1;
  margin-bottom: 0;
}

/* 统计区域 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-card {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.stats-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
}

.stat-item.success { background-color: #e8f5e8; }
.stat-item.error { background-color: #ffeaea; }
.stat-item.warning { background-color: #fff8e1; }

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.success-rate {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid #eee;
}

.success-rate-label {
  font-size: 28rpx;
  color: #666;
}

.success-rate-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
}

/* 测试结果区域 */
.results-section {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-count {
  font-size: 28rpx;
  color: #666;
}

.results-scroll {
  max-height: 600rpx;
}

.result-list {
  padding: 20rpx;
}

.result-item {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #ddd;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.result-operation {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.result-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.status-success {
  background-color: #e8f5e8;
  color: #4CAF50;
}

.status-failed {
  background-color: #ffeaea;
  color: #f44336;
}

.status-warning {
  background-color: #fff8e1;
  color: #ff9800;
}

.status-info {
  background-color: #e3f2fd;
  color: #2196f3;
}

.result-message {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.result-timestamp {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.result-data {
  margin-top: 15rpx;
  padding: 15rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.data-content {
  font-size: 24rpx;
  color: #555;
  font-family: monospace;
}

.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.empty-hint {
  display: block;
  font-size: 28rpx;
  color: #ccc;
}